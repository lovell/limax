{
  "name": "limax",
  "version": "4.2.1",
  "main": "./lib/limax",
  "types": "index.d.ts",
  "description": "Node.js module to generate URL slugs. Another one? This one cares about i18n and transliterates non-Latin scripts to conform to the RFC3986 standard. Mostly API-compatible with similar modules.",
  "repository": {
    "type": "git",
    "url": "git://github.com/lovell/limax.git"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "CHANGELOG.md",
    "index.d.ts",
    "lib/"
  ],
  "exports": {
    "types": "./index.d.ts",
    "import": "./lib/limax.mjs",
    "require": "./lib/index.cjs"
  },
  "type": "module",
  "scripts": {
    "build": "esbuild lib/limax.mjs --format=cjs --outfile=lib/limax.cjs",
    "lint": "semistandard lib/limax.mjs",
    "types": "tsd --files test/index.test-d.ts",
    "unit": "nyc --reporter=html ava test/unit.cjs",
    "test": "npm run lint && npm run build && npm run types && npm run unit",
    "changelog": "conventional-changelog -i CHANGELOG.md -s"
  },
  "keywords": [
    "slug",
    "url",
    "clean",
    "speaking",
    "seo",
    "i18n",
    "l10n",
    "transliterate",
    "script",
    "language",
    "pinyin",
    "hepburn"
  ],
  "author": "Lovell Fuller <npm@lovell.info>",
  "contributors": [
    "Zhe Feng <fengzhe1983@gmail.com>",
    "Aleksey Olenyuk <alo@qapint.com>",
    "Daryl Chan <dvrylc@gmail.com>",
    "Arjan Frans <arjanfrans.com@gmail.com>",
    "Fabrice Labbe <fabrice.labbe@adfab.fr>",
    "Lukas Spie√ü <lukas.spiess@gmail.com>",
    "David Dijan <david.djian@traceweb.fr>",
    "Benjamin Piouffle <benjamin@opencollective.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "hepburn": "^1.2.2",
    "lodash.deburr": "^4.1.0",
    "pinyin-pro": "^3.27.0",
    "speakingurl": "^14.0.1"
  },
  "devDependencies": {
    "ava": "^5.3.1",
    "conventional-changelog-cli": "^2.2.2",
    "esbuild": "^0.25.10",
    "nyc": "^15.1.0",
    "semistandard": "^16.0.1",
    "tsd": "^0.33.0"
  }
}
